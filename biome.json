{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "ignoreUnknown": true,
    "includes": ["src/**/*.{js,jsx,ts,tsx}"]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "formatWithErrors": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": { "useSolidForComponent": "off" },
      "correctness": { "useUniqueElementIds": "off" }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "lineWidth": 100
    },
    "parser": {
      "jsxEverywhere": true
    }
  },

  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },

  "json": {
    "formatter": {
      "enabled": true
    }
  }
}
